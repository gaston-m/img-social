{{#if sidebar.comments }}
<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h4><i class="fas fa-comments"></i> Ultimos Comentarios</h4>
    </div>
    <div class="card-body">
        {{#each sidebar.comments}}
          <div class="row">
              <div class="col">
                  <a href="/images/{{image.uniqueId}}">
                    <img src="/upload/{{image.filename}}" class="image-thumbnail w-70">
                  </a>
              </div>
              <div class="col">
                  <blockquote class="w-100">
                      <p>{{comment}}</p>
                      <footer class="blockquote-footer">
                          <span>{{name}}</span>
                          <span>{{timeago timestamp}}</span>

                      </footer>
                  </blockquote>
              </div>
          </div>
        {{/each}}
    </div>
</div>


{{/if}}