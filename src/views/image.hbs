<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center ">
        <h4>{{image.title}}</h4>
        <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p class="m-1">{{image.description}}</p>
        <div class="text-center">
            <img src="/upload/{{image.filename}}" alt="Image" class="w-100 h-100 img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
            <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
                <i class="fas fa-thumbs-up"></i> Like
            </button>
            <p>
                <span class="likes-count">{{image.likes}}</span>
                <i class="fas fa-heart"></i>
            </p>
            <p>
                <i class="fas fa-eye "></i> {{image.views}}
            </p>
            <p>
                <i class="far fa-clock"></i>  {{timeago image.timestamp}}
            </p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center"> 
        <h3>Comentarios</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment-o"></i> Publica un Comentario

        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/images/{{image.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <input type="text" name="name" placeholder="Nombre" class="form-control">
                </div>
                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="E-mail">
                </div>
                <div class="form-group">
                   <textarea name="comment" rows="2" class="form-control" placeholder="Tu Comentario"></textarea>    
                </div> 
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i> Publicar
                    </button>
                </div>
            </form>
        </blockquote>
        
        <ul class="list-group p-4">
            {{#each comments}}
              <li class="list-group-item">
                  <div class="row">
                      <a href="#" class="col-md-3 text-center">
                          <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" >
                      </a>
                      <blockquote class="col">
                          <p class="lead">{{comment}}</p>
                          <footer class="blockquote-footer">
                              {{name}}  -  {{timeago timestamp}}
                          </footer>
                      </blockquote>
                  </div>
              </li>
            {{/each}}
        </ul>

    
    </div>
</div>

